{
  "packages": ["packages/*", "packages/eps/*"],
  "version": "independent",
  "npmClient": "npm",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "command": {
    "version": {
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": [
        "master"
      ],
      "ignoreChanges": [
        ".*",
        "*.md",
        "docker/*",
        "sonar-project.properties"
      ]
    }
  }
}
