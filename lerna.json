{
  "packages": ["packages/*", "packages/eps/*"],
  "version": "independent",
  "npmClient": "npm",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "command": {
    "version": {
      "allowBranch": [
        "master", "feature/publishing"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": [
        "master", "feature/publishing"
      ],
      "ignoreChanges": [
        ".*",
        "*.md",
        "docker/*",
        "sonar-project.properties"
      ]
    }
  }
}
