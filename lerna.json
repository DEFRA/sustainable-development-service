{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.0-idm",
  "npmClient": "npm",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "idm"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": [
        "master",
        "develop",
        "idm"
      ],
      "ignoreChanges": [
        ".*",
        "docker/*"
      ]
    }
  }
}
