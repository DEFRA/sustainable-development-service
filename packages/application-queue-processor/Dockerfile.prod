FROM wildlife_licensing/builder AS builder
WORKDIR /app

RUN lerna link --force-local
RUN lerna bootstrap --force-local --scope=@defra/wls-application-queue-processor

FROM wildlife_licensing/base
WORKDIR /app/packages/application-queue-processor
COPY --from=builder /app/ /app/

CMD [ "node", "src/application-queue-processor.js" ]
