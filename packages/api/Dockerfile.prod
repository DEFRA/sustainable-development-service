FROM wildlife_licensing/builder AS builder
WORKDIR /app

RUN ls -la

RUN cd packages && ls -la

RUN lerna link --force-local
RUN lerna bootstrap --scope=@defra/wls-api

FROM wildlife_licensing/base
WORKDIR "app/packages/api"
COPY --from=builder /app/ /app/

ARG PORT=3000
EXPOSE ${PORT}
CMD [ "node", "src/api-service.js" ]
