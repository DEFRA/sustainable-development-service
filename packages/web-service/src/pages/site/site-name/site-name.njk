{% extends "standard-form.njk" %}

{% from "input/macro.njk" import govukInput %}

{% set errorMap = {
        'site-name': {
          'string.empty': { ref: '#site-name', text: 'Give this site a name' }
        }
    }
%}

{% block topNavigation %}
<p class="govuk-body sdds-save-link">
    <a class="govuk-link govuk-link--no-visited-state" href="/applications">Save and return later</a>
</p>
{% endblock %}

{% set title = "What is the name of the site for planned work activity?" %}

{% block pageContent %}
    {{ govukInput({
      id: "site-name",
      name: "site-name",
      classes: "govuk-!-width-three-quarters",
      spellcheck: false,
      value: payload['siteName'] if payload['siteName'] else data.name,
      errorMessage: { text: 'Enter a name for this site' } if error['site-name']
    }) }}
{% endblock %}
