{% extends "standard-form.njk" %}

{% from "input/macro.njk" import govukInput %}

{% set errorMap = {
        'site-name': {
          'string.empty': { ref: '#site-name', text: 'Give this site a name' },
          'string.max': { ref: '#site-name', text: 'You have entered too many characters'}
        }
    }
%}

{% set title = "What is the name of the site for planned work activity?" %}

{% block pageContent %}
    {{ govukInput({
      id: "site-name",
      name: "site-name",
      classes: "govuk-!-width-three-quarters",
      spellcheck: false,
      value: data.name if data.name else payload['site-name'],
      attributes: { maxlength: 100 },
      errorMessage: { text: 'Enter a name for this site' } if error['site-name']
    }) }}
{% endblock %}
