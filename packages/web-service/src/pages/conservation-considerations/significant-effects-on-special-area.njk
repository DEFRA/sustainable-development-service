{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set errorMap = {
        'permission-details': {
          'string.empty': { ref: '#enter-experience', text: 'You have not entered the permission details' },
          'string.max': { ref: '#enter-experience', text: 'You have entered too many characters'}
        }
    }
%}

{% set title = "Effects on Special Protection Areas, Special Areas of Conservation or Ramsar sites" %}

{% block pageContent %}
    <p class="govuk-body-m">You should have advice from a professional ecologist on whether the licensable activity is likely to have a significant impact on:</p>
    <ul class="govuk-list govuk-list--bullet">
        <li>Special Protection Areas </li>
        <li>Special Areas of Conservation</li>
        <li>Ramsar sites</li>
    </ul>
    <details class="govuk-details" data-module="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          Check the location of these sites
        </span>
      </summary>
      <div class="govuk-details__text">
        <p class="govuk-body"><a class="govuk-link" href="{{ _uri.magic.spa }}" target="_blank">Check the location of SPAs</a></p>
        <p class="govuk-body"><a class="govuk-link" href="{{ _uri.magic.spa }}" target="_blank">Check the location of SACs</a></p>
        <p class="govuk-body"><a class="govuk-link" href="{{ _uri.magic.ramsar }}" target="_blank">Check the location of Ramsar sites</a></p>
      </div>
    </details>

    {{ govukRadios({
      name: "effects",
      fieldset: {
        legend: {
          text: "Will the licensable activity affect one of these types of site?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: [
        {
          value: "YES",
          text: "Yes",
          checked: data.effects === 'YES'
        },
        {
          value: "NO",
          text: "No",
          checked: data.effects === 'NO'
        },
        {
          value: "NO-ADVICE",
          text: "I haven't had advice",
          checked: data.effects === 'NO-ADVICE'
        }
      ]
    }) }}
{% endblock %}
