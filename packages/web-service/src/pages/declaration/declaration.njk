{% extends 'information-page.njk' %}
{% from "button/macro.njk" import govukButton %}

{% set title = "Declaration" %}

{% block pageContent %}
<p class="govuk-body">By submitting this application you are hereby declaring your love of badgers and your intention to prioritise the well-being of badgers above yourself and loved ones. </p>
{{ govukButton({
    attributes: { id: "continue" },
    preventDoubleClick: true,
    name: 'continue',
    text: buttonText if buttonText else 'Confirm',
    classes: "govuk-!-margin-top-5",
    href: "/submission"
})}}
{% endblock %}