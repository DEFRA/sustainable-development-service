{% extends "standard-form.njk" %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% set errorMap = {
        'work-end': {
          'noDateSent': { ref: '#work-end', text: 'You have not entered the date you finished the work' },
          'invalidDate': { ref: '#work-end', text: 'End date must be a real date' },
          'endDateBeforeStart': { ref: '#work-end', text: 'The end date must be after the start date' },
          'dataInFuture': { ref: '#work-end', text: 'The finish date must be in the past' }
        }
    }
%}

{% set title = 'When did you finish the work?' %}

{% block pageContent %}
  {{ govukDateInput({
    id: "work-end",
    namePrefix: "work-finish",
    name: "work-end",
    errorMessage: { text: "Enter the date you started the work" } if error['work-end'],
    items: [
      {
        classes: "govuk-input--width-2",
        value: data.day,
        name: "day"
      },
      {
        classes: "govuk-input--width-2",
        value: data.month,
        name: "month"
      },
      {
        classes: "govuk-input--width-4",
        value: data.year,
        name: "year"
      }
    ],
    hint: {
      text: "For example, 27 3 2007"
    }
  }) }}

{% endblock %}
