{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}
{% from "textarea/macro.njk" import govukTextarea %}

{% set errorMap = {
        'yes-no': {
            'any.required': { ref: '#yes-no', text: 'You have not selected an option' }
        },
        'yes-conditional-input': {
          'string.empty': { ref: '#yes-conditional-input', text: 'You have not described the evidence you have that badgers were disturbed' },
          'string.max': { ref: '#yes-conditional-input', text: 'You have entered too many characters' }
        }
    }
%}
{% set title = 'Did you disturb badgers?' %}

{% set yesContionalInputHtml %}
{{ govukTextarea({
  id: "yes-conditional-input",
  name: "yes-conditional-input",
  maxlength: 4000,
  errorMessage: { text: 'Enter a description' } if error['yes-conditional-input'],
  value: payload['yes-conditional-input'],
  classes: "govuk-!-width-full",
  label: {
    text: "Describe the evidence you have that badger were disturbed"
  }
}) }}
{% endset -%}

{% block pageContent %}
    {{ govukRadios({
      idPrefix: "yes-no",
      name: "yes-no",
      isPageHeading: false,
      errorMessage: {
        text: "Select an option"
      } if error['yes-no'],
      items: [
        {
          value: "yes",
          text: "Yes",
          checked: payload['yes-no'] === 'yes',
          conditional: {
            html: yesContionalInputHtml
          }
        },
        {
          value: "no",
          text: "No, there was no evidence that badgers were disturbed",
          checked: payload['yes-no'] === 'no'
        }
      ]
    }) }}
{% endblock %}
