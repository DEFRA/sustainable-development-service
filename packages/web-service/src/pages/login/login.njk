{% extends "standard-form.njk" %}
{% from "input/macro.njk" import govukInput %}

{% set title = 'Sign in' %}

{% set errorMap = {
        'user-id': {
            'string.empty': { ref: '#user-id', text: 'Enter your user Id' },
            'string.alphanum': { ref: '#user-id', text: 'Your user ID many only contain letters and numbers' }
        }
    }
%}

{% block pageContent %}
    {{ govukInput({
      label: {
        text: 'User ID'
      },
      id: "user-id",
      name: "user-id",
      value: payload['user-id'],
      classes: "govuk-input--width-20",
      attributes: { maxlength: 30 },
      errorMessage: { text: 'Enter your user ID' } if error['user-id']
    }) }}
{% endblock %}
