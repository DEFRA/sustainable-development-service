{% extends "standard-form.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}

{% set errorMap = {
  'reference': {
    'string.empty': {
      ref: '#reference',
      text: 'You have not entered a planning permission reference'
    },
    'string.max': {
      ref: '#reference',
      text: 'You have entered too many characters'
    }
  }
} %}

{% set title = 'What is the ' + data.consentType + ' reference?' %}

{% block pageContent %}

  {{ govukInput({
    id: "reference",
    name: "reference",
    errorMessage: { text: "Enter a planning permission reference" } if error['reference'],
    classes: "govuk-input--width-10",
    attributes: { maxlength: 100 },
    value: payload['reference'] if payload['reference'] else data.consentReference
  }) }}

{% endblock %}