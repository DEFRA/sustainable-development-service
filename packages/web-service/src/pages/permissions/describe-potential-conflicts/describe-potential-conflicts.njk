{% extends 'standard-form.njk' %}
{% from "textarea/macro.njk" import govukTextarea %}
{% set errorMap = {
    'describe-potential-conflicts': {
      'string.empty': { ref: '#describe-potential-conflicts', text: 'You have not described the potential conflicts between this application and other legal commitments' },
      'string.max': { ref: '#describe-potential-conflicts', text: 'You have entered too many characters'}
    }
  } %}
{% set title = 'Describe the potential conflicts between this application and other legal commitments' %}
{% block pageTitle %}
  {{ 'Error: ' + title if error else title }}
{% endblock %}
{% block pageContent %}
{{ govukTextarea({
  name: "describe-potential-conflicts",
  id: "describe-potential-conflicts",
  value: data.potentialConflictDescriptionValue if data.potentialConflictDescriptionValue else payload['describe-potential-conflicts'],
  maxlength: 4000,
  errorMessage: { text: "Describe the potential conflicts" } if error['describe-potential-conflicts']
}) }}
{% endblock %}
