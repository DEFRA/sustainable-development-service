{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}
{% from "input/macro.njk" import govukInput %}

{% set errorMap = {
        'is-organisation': {
            'any.required': { ref: '#is-organisation', text: noneSelected }
        },
        'organisation-name': {
            'string.empty': { ref: '#organisation-name', text: noneNamed },
            'any.invalid': { ref: '#name', text: 'The name \'' + payload['organisation-name'] + '\' has already been used, enter a unique name'  }
        }
    }
%}
{% set orgNameError = false %}

{% if error['organisation-name'] === 'string.empty' %}
    {% set orgNameError = noneNamed %}
{% elif error['organisation-name'] === 'any.invalid' %}
    {% set orgNameError = error['organisation-name'] %}
{% endif %}



{% set organisationName %}
    {{ govukInput({
      id: "organisation-name",
      name: "organisation-name",
      classes: "govuk-!-width-two-thirds",
      label: {
        text: "Name of organisation"
      },
      value: data.account.name if data.account.name else payload['organisation-name'],
      attributes: { maxlength: 160 },
        errorMessage: {
            text: orgNameError
        } if orgNameError
    }) }}
{% endset -%}

{% block pageContent %}
    {{ govukRadios({
      idPrefix: "is-organisation",
      name: "is-organisation",
      errorMessage: {
        text: noneSelected
      } if error['is-organisation'] === 'any.required',
      items: [
        {
          value: "yes",
          text: "Yes",
            checked: payload['is-organisation'] if payload['is-organisation'] === 'yes' else data.isOrganization === 'yes',
          conditional: {
            html: organisationName
          }
        },
        {
          value: "no",
          text: "No",
          checked: data.isOrganization and data.isOrganization === 'no' and payload['is-organisation'] !== 'yes'
        }
      ]
    }) }}
{% endblock %}
