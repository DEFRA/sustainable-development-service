{% extends "information-page.njk" %}
{% from "button/macro.njk" import govukButton %}
{% set widthClass = 'govuk-grid-column-two-thirds' %}
{% set title = 'Check your answers' %}
{% from "answer-summary.njk" import answerSummary %}

{% set questionMap = {
    addAdditionalContact: { question: 'Do you want to add an alternative ecologist contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalEcologistAdd },
    contactName: { question: 'Who is the alternate ecologist?', href: _uri.additionalEcologistName },
    contactEmail: { question: 'What is the email address of the person we should contact?', href: _uri.additionalEcologistEmail }
} %}

{% block pageContent %}
    {{ answerSummary(questionMap, data.contact ) }}

    {{ govukButton({
        attributes: { id: 'continue' },
        preventDoubleClick: true,
        name: 'continue',
        text: buttonText if buttonText else 'Continue',
        classes: "govuk-!-margin-top-5"
    }) }}
{% endblock %}
