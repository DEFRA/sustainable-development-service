{% extends "information-page.njk" %}
{% from "button/macro.njk" import govukButton %}
{% set widthClass = 'govuk-grid-column-two-thirds' %}
{% set title = 'Check your answers' %}
{% from "answer-summary.njk" import answerSummary %}

{% set applicantQuestionMap = {
    addAdditionalApplicant: { question: 'Add an additional applicant contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalApplicantAdd },
    applicantIsUser: { question: 'Are you the additional applicant contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalApplicantUser },
    applicantName: { question: 'What is the name of the person we should contact?', href: _uri.additionalApplicantNames },
    applicantEmail: { question: 'What is the email address of the person we should contact?', href: _uri.additionalApplicantEmail }
} %}

{% set ecologistQuestionMap = {
    addAdditionalEcologist: { question: 'Add an additional ecologist contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalEcologistAdd },
    ecologistIsUser: { question: 'Are you the additional applicant contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalEcologistUser },
    ecologistName: { question: 'What is the name of the person we should contact?', href: _uri.additionalEcologistNames },
    ecologistEmail: { question: 'What is the email address of the person we should contact?', href: _uri.additionalEcologistEmail }
} %}

{% block pageContent %}
    <h2 class="govuk-heading-m">Additional Applicant</h2>
    {{ answerSummary(applicantQuestionMap, data.applicant) }}

    <h2 class="govuk-heading-m">Additional Ecologist</h2>
    {{ answerSummary(ecologistQuestionMap, data.ecologist) }}

    {{ govukButton({
        attributes: { id: 'continue' },
        preventDoubleClick: true,
        name: 'continue',
        text: buttonText if buttonText else 'Continue',
        classes: "govuk-!-margin-top-5"
    }) }}
{% endblock %}
