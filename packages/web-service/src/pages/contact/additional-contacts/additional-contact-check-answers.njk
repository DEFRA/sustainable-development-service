{% extends "information-page.njk" %}
{% from "button/macro.njk" import govukButton %}
{% set widthClass = 'govuk-grid-column-two-thirds' %}
{% set title = 'Check your answers' %}
{% from "answer-summary.njk" import answerSummary %}

{% set questionMap = {
    addAdditionalApplicant: { question: 'Do you want to add an alternative contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalApplicantAdd },
    applicantIsUser: { question: 'Are you the additional applicant contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalApplicantUser },
    applicantName: { question: 'Which of your previous contacts do you want to use?', href: _uri.additionalApplicantNames },
    applicantEmail: { question: 'What is the email address of the person we should contact?', href: _uri.additionalApplicantEmail },

    addAdditionalEcologist: { question: 'Do you want to add an alternative ecologist contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalEcologistAdd },
    ecologistIsUser: { question: 'Are you the additional applicant contact?', answer: { 'yes': 'Yes', 'no': 'No', '-': 'Not answered' }, href: _uri.additionalEcologistUser },
    ecologistName: { question: 'Which of your previous ecologist contacts do you want to use?', href: _uri.additionalEcologistNames },
    ecologistEmail: { question: 'What is the email address of the person we should contact?', href: _uri.additionalEcologistEmail }
} %}

{% block pageContent %}
    {{ answerSummary(questionMap, data.applicant.concat(data.ecologist) ) }}

    {{ govukButton({
        attributes: { id: 'continue' },
        preventDoubleClick: true,
        name: 'continue',
        text: buttonText if buttonText else 'Continue',
        classes: "govuk-!-margin-top-5"
    }) }}
{% endblock %}
