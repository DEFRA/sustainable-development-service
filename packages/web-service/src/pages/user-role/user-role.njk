{% extends "standard-form.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set errorMap = {
    'user-role': {
        'any.required': { ref: '#user-role', text: 'Enter why are you making this application' }
    }
} %}

{% set title = 'Why are you making this application?' %}

{% set radioItems = [
    {
        value: 'ECOLOGIST',
        text: 'I am the named ecologist'
    },
    {
        value: 'APPLICANT',
        text: 'I will hold the licence, if issued',
        hint: {
        text: "The person who holds this licence will  usually be someone from the organisation that is undertaking the development project."
    }
    },
    { divider: "or" },
    { value: "OTHER", text: "I am someone else" }
] %}

{% block pageContent %}

    <p class="govuk-body"> You must explain to Natural England your role in this application, and the licence, if
        issued.</p>
    {{ govukRadios({
        id: "user-role",
        name: "user-role",
        errorMessage: { text: "Select an option." } if error['user-role'],
        items: radioItems
    }) }}

{% endblock %}
