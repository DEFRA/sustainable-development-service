{% extends "standard-form.njk" %}

{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% set errorMap = {
        'habitat-work-start': {
          'no-date-sent': { ref: '#habitat-work-start', text: 'You have not entered a start date' },
          'invalidDate': { ref: '#habitat-work-start', text: 'You have not sent a valid date' },
          'dateHasPassed': { ref: '#habitat-work-start', text: 'You have chosen a date in the past' },
          'outsideLicence': { ref: '#habitat-work-start', text: 'You have chosen a date outside the licence period' }
        }
    }
%}

{% set title = "When will the work start?" %}

{% block pageContent %}

  {{ govukDateInput({
    id: "habitat-work-start",
    namePrefix: "habitat-work-start",
    name: "habitat-work-start",
    errorMessage: { text: "Enter a start date for the licenced work on this sett." } if error['habitat-work-start'],
    hint: {
      text: "The work must start during the licence period (from 1 May to 30 November)"
    }
  }) }}

{% endblock %}
