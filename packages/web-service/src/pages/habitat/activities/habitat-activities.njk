{% extends "standard-form.njk" %}

{% from "error-summary.njk" import errorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% set errorMap = {
        'habitat-activities': {
          'no-checkbox-selected': { ref: '#habitat-activities', text: 'You have not selected a choice.' }
        }
    }
%}

{% block pageTitle %}{{ 'Error: ' + title if error else title }}{% endblock %}

{% block pageContent %}

  {{ errorSummary(error, errorMap, 'There is a problem') }}

{{ govukCheckboxes({
  id: "habitat-activities",
  name: "habitat-activities",
  fieldset: {
    legend: {
      text: "How will you affect the badgers in this sett?",
      classes: "govuk-fieldset__legend--l"
    }
  },
  hint: {
    text: "Select all that apply."
  },
  items: [
    {
      value: data.OBSTRUCT_SETT_WITH_GATES,
      text: "Obstructing sett entrances by means of one-way badger gates"
    },
    {
      value: data.OBSTRUCT_SETT_WITH_BLOCK_OR_PROOF,
      text: "Obstructing access to sett entrances by blocking or proofing"
    },
    {
      value: data.DAMAGE_A_SETT,
      text: "Damaging a sett by hand and mechanical means"
    },
    {
      value: data.DESTROY_A_SETT,
      text: "Destruction of the vacant sett by hand and mechanical means"
    },
    {
      value: data.DISTURB_A_SETT,
      text: "Disturbance of badgers"
    }
  ]
}) }}

{% endblock %}
    