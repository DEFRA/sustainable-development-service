{% extends "standard-form.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set errorMap = {
        'habitat-reopen': {
          'any.required': { ref: '#habitat-reopen', text: 'You have not selected an option' }
        }
    }
%}

{% set title = 'Will the badger sett be reopened once development is complete?' %}

{% block pageContent %}

  {{ govukRadios({
    id: "habitat-reopen",
    name: "habitat-reopen",
    errorMessage: { text: "Select an option." } if error['habitat-reopen'],
    items: [
      {
        value: true,
        text: "Yes"
      },
      {
        value: false,
        text: "No"
      }
    ]
  }) }}

{% endblock %}
