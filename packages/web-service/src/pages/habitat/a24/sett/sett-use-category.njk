{% extends "standard-form.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set errorMap = {
        'habitat-types': {
          'any.required': { ref: '#habitat-types', text: 'Enter a sett type' }
        }
    }
%}

{% set title = 'What are the badgers using this sett for?' %}

{% block pageContent %}

  {{ govukRadios({
    id: "habitat-types",
    name: "habitat-types",
    hint: {
      text: "Select one option."
    },
    errorMessage: { text: "Select a sett type." } if error['habitat-types'],
    items: [
      {
        checked: data.settType === data.MAIN_NO_ALTERNATIVE_SETT,
        value: data.MAIN_NO_ALTERNATIVE_SETT,
        text: 'Main'
      },
      {
        checked: data.settType === data.ANNEXE,
        value: data.ANNEXE,
        text: 'Annexe'
      },
      {
        checked: data.settType === data.SUBSIDIARY,
        value: data.SUBSIDIARY,
        text: 'Subsidiary'
      },
      {
        checked: data.settType === data.OUTLIER,
        value: data.OUTLIER,
        text: 'Outlier'
      }
    ]
  }) }}

{% endblock %}
