{% extends "standard-form.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set errorMap = {
        'habitat-types': {
          'any.required': { ref: '#habitat-types', text: 'You have not selected an option' }
        }
    }
%}

{% set title = 'What are the badgers using this sett for?' %}

{% block pageContent %}

  {{ govukRadios({
    id: "habitat-types",
    name: "habitat-types",
    hint: {
      text: "Select one."
    },
    errorMessage: { text: "Select a sett type." } if error['habitat-types'],
    items: [
      {
        value: data.MAIN_NO_ALTERNATIVE_SETT,
        text: "Main"
      },
      {
        value: data.ANNEXE,
        text: "Annexe"
      },
      {
        value: data.OUTLIER,
        text: "Outlier"
      },
      {
        value: data.SUBSIDIARY,
        text: "Subsidiary"
      }
    ]
  }) }}

{% endblock %}
