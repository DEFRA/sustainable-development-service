{% extends "standard-form.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}

{% set errorMap = {
        'habitat-entrances': {
          'number.base': { ref: '#habitat-entrances', text: 'You have not entered the number of holes' },
          'number.integer': { ref: '#habitat-entrances', text: 'You have not entered an integer' },
          'number.max': { ref: '#habitat-entrances', text: 'You have entered more than the 100 maximum entrances' }
        }
    }
%}

{% set title = 'How many entrance holes does the badger sett have?' %}

{% block pageContent %}

  {{ govukInput({
    id: "habitat-entrances",
    name: "habitat-entrances",
    classes: "govuk-input--width-5",
    errorMessage: { text: "Enter the number of entrance holes for this sett." } if error['habitat-entrances'],
    inputmode: "numeric",
    pattern: "[0-9]*",
    spellcheck: false
  }) }}

{% endblock %}
