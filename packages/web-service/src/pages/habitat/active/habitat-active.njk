{% extends "standard-form.njk" %}

{% from "error-summary.njk" import errorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set errorMap = {
        'habitat-active': {
          'no-radio-selected': { ref: '#sett-radio', text: 'You have not selected a choice.' }
        }
    }
%}

{% block pageTitle %}{{ 'Error: ' + title if error else title }}{% endblock %}

{% block pageContent %}

{{ errorSummary(error, errorMap, 'There is a problem') }}

  {{ govukRadios({
    id: "activeSett-radio",
    name: "activeSett-radio",
    fieldset: {
      legend: {
        text: "Are badgers actively using this sett?",
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: { text: "Select yes if badgers actively use this sett." } if error['sett-selection'],
    items: [
      {
        value: true,
        text: "Yes"
      },
      {
        value: false,
        text: "No"
      }
    ]
  }) }}

{% endblock %}
