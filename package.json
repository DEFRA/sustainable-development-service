{
  "name": "wildlife-licencing-service",
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:DEFRA/wildlife-licencing.git"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "lerna": "^8.0.2",
    "nodemon": "^3.0.1",
    "nunjucks": "^3.2.3",
    "standard": "^16.0.4"
  },
  "scripts": {
    "test": "jest",
    "test-clear": "jest --clearCache",
    "test:only-changed": "jest --changedSince master",
    "test:watch": "jest --watch",
    "format": "standard",
    "lerna:clean": "lerna clean --yes",
    "lerna:bootstrap": "lerna bootstrap",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "docker:build-base": "sh Docker-build-base.sh",
    "docker:build-services": "docker-compose -f docker/services.build.yml build --no-cache",
    "docker:start-services": "docker-compose -f docker/services.yml up -d",
    "docker:stop-services": "docker-compose -f docker/services.yml down",
    "docker:start-cloud": "docker-compose -f docker/cloud-services.yml up -d",
    "docker:stop-cloud": "docker-compose -f docker/cloud-services.yml down",
    "docker:start-proxy": "docker-compose -f docker/nginx/nginx-service.yml up -d ",
    "docker:stop-proxy": "docker-compose -f docker/nginx/nginx-service.yml down",
    "version": "lerna version --force-publish"
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    },
    "ignore": [
      "**/dist/*.js",
      "packages/api/webpack.config.cjs"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true,
      "es6": true,
      "es2021": true
    },
    "ignorePatterns": [
      "**/dist/*.js"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/api/src/index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",
    "silent": true
  }
}
