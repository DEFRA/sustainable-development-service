{
  "name": "wildlife-licencing-service",
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DEFRA/wildlife-licencing.git"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "istanbul": "^0.4.5",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "lerna": "^4.0.0",
    "nodemon": "^3.0.1",
    "nunjucks": "^3.2.3",
    "nyc": "^15.1.0",
    "standard": "^16.0.4"
  },
  "scripts": {
    "postinstall": "npm run lerna:bootstrap",
    "test": "lerna run test --parallel --stream",
    "merge": "npx istanbul report --dir=./coverage/combined --include=**/coverage/coverage-final.json --print=none && npx istanbul report --dir=./coverage/combined --print=text",
    "test-clear": "jest --clearCache",
    "test:only-changed": "jest --changedSince master",
    "test:watch": "jest --watch",
    "format": "standard",
    "lerna:clean": "lerna clean --yes",
    "lerna:bootstrap": "lerna bootstrap",
    "docker:build": "docker-compose -f docker/services.build.yml build",
    "docker:start": "docker stack deploy -c docker/services.yml -c docker/cloud-services.yml wls",
    "docker:start-cloud": "docker stack deploy -c docker/cloud-services.yml wls_cloud",
    "docker:stop": "docker stack rm wls",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "eslintConfig": {
    "extends": "./.eslintrc.js"
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    },
    "ignore": [
      "**/dist/*.js",
      "packages/api/webpack.config.cjs"
    ]
  }
}
